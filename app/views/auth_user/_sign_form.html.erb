<div class="sign_form_wrapper container">
  <% if @sign_user.errors.any? %>
      <div id="error_explanation bg-danger">
        <h2><%= pluralize(@sign_user.errors.count, 'error') %> occurred during creating an account</h2>
        <ul class="bg-danger">
          <% @sign_user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
   <%= form_for(@sign_user,:url => auth_post_signup_path,:role => "form") do |f| %>
      <h2 class="form-signin-heading"><%= t(:user_auth_signin_heading)%></h2>
      <div class="form-group">
        <label for="user_email"><%= t(:user_auth_sign_text_email) %></label>
        <%= f.email_field :email,{:class => "form-control",:maxlength => 255,:require  => "require"}%>
      </div>
      <div class="form-group">
        <label for="user_email"><%= t(:user_auth_sign_text_username) %></label>
        <%= f.text_field :username,{:class => "form-control",:maxlength => 15,:require  => "require"}%>
      </div>
      <div class="form-group">
        <label for="user_password"><%= t(:user_auth_sign_text_password) %></label>
        <%= f.password_field  :password ,{:class => "form-control",:maxlength => 255,:require  => "require"}%>
      </div>
      <div class="form-group">
        <label for="user_password_confirm"><%= t(:user_auth_sign_text_re_passowrd) %></label>
        <%= f.password_field  :password_confirmation,{:class => "form-control",:maxlength => 255,:require  => "require"}%>
      </div>
      <div class="form-group">
        <%= f.submit(t(:user_auth_sign_up_text_submit),{:class =>"btn btn-lg btn-primary btn-block", :name => "sign_in"})%>
      </div>
    <% end %>
</div>
